<!DOCTYPE html>
<html lang="en">
  <%- include('./includes/head.ejs') %>
  <body>
    <%- include('./includes/navbar.ejs') %> <%- include('./includes/banner.ejs')
    %>
  <section class="content">
    <div class="container">
      <div class="row column">
        <% postAndTopic.forEach(post => { %> 
          <% if (post.Post.is_deleted != 1) { %> 
            <div class="case">
              <div class="row">
                <div class="img-box d-flex">
                  <a href="/single_post/<%= post.Post.id %>" class="img" style="background-image:url('/images/<%= post.Post.image %>');"></a>
                </div>
                <div class="text-box d-flex">
                  <div class="text">
                    <a href="/filtered_posts/<%= post.Topic.id %>" class="subheading"><%= post.Topic.name %></a>
                    <h2>
                      <a href="/single_post/<%= post.Post.id %>"><%= post.Post.title %></a>
                    </h2>
                    <div class="media-social">
                      <a href="#">
                        <span class="icon-github"></span>
                      </a>
                    </div>
                    <div class="meta">
                      <% const date = new Date(post.Post.createdAt) %>
                      <span class="date"><%= date.toDateString() %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
         <% }) %> 
      </div>
  </section>
    <!-- Footer -->
    <%- include('./includes/footer.ejs') %>
  </body>
</html>
